{
  "name": "boostly-glow-forge",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "wrangler pages dev",
    "deploy": "npm run build && wrangler pages deploy",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "clean-port": "fuser -k 3000/tcp 2>/dev/null || true",
    "dev:sandbox": "wrangler pages dev dist --ip 0.0.0.0 --port 3000",
    "db:migrate:local": "wrangler d1 migrations apply boostly-db --local",
    "db:migrate:prod": "wrangler d1 migrations apply boostly-db",
    "db:seed": "wrangler d1 execute boostly-db --local --file=./seed.sql"
  },
  "dependencies": {
    "hono": "^4.9.9"
  },
  "devDependencies": {
    "@hono/vite-build": "^1.2.0",
    "@hono/vite-dev-server": "^0.18.2",
    "vite": "^6.3.5",
    "wrangler": "^4.4.0"
  }
}